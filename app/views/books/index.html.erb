<%= stylesheet_link_tag "books", :media => "all" %>
<h1 class = "index_html">Books</h1>
<table class = "index_html">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |b| %>
    <tr>
      <td><%= b.title %></td>
      <td><%= b.body %></td>
      <td><%= link_to 'Show',"books_show_path(b.id.to_s)" %></td>
      <td><%= link_to 'Edit',"edit_books_path(:id)" %></td>
      <td><%= link_to 'Destroy',books_path(:id),method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class ="index_html_newbook">
  <h2>New Book</h2>

  <%= form_with model: @book,url:'/books',method: :post, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book' %>
  <% end %>
</div>