<%= stylesheet_link_tag "books", :media => "all" %>
<h2 class = "index_html">Books</h2>
<table class = "index_html">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |b| %>
    <tr>
      <td><%= b.title %></td>
      <td><%= b.body %></td>
      <td><%= link_to 'Show',show_book_path(b.id) %></td>
      <td><%= link_to 'Edit',edit_book_path(b.id) %></td>
      <td><%= link_to "Destroy", destroy_book_path(b.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class ="index_html_newbook">
  <h3>New Book</h3>

  <% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @book,url:'/books',method: :post, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book' %>
  <% end %>
</div>